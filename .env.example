# Django
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
SITE_URL=http://localhost:8000

# Database
DB_NAME=speech2text
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_PASSWORD=redispass
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Celery
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Email
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_sendgrid_username
EMAIL_HOST_PASSWORD=your_sendgrid_password
DEFAULT_FROM_EMAIL=noreply@example.com

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# AWS S3 (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=${AWS_STORAGE_BUCKET_NAME}.s3.amazonaws.com
# USE_S3=False

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Security
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Logging
DJANGO_LOG_LEVEL=INFO

# Application Settings
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440  # 2.5MB in bytes

# Whisper AI
WHISPER_MODEL=base  # tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # cpu or cuda if GPU is available

# Rate Limiting
DEFAULT_RATE_LIMIT=100/hour
ANONYMOUS_RATE_LIMIT=10/hour

# Feature Flags
ENABLE_EMAIL_VERIFICATION=False
ENABLE_STRIPE_WEBHOOKS=False
